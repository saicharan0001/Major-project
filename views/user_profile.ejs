            <%}%> -->
            <% if(user.id==profile_user.id){ %>
                <h3>my Posts</h3>
                <%}else{%>
                    <h3>Posts</h3>
               <%}%>
                <div class="my-posts">
                    <%for(i of allpostpics){%>
                        <div class="one-post">
                            <img src="<%=i.postpic%>" alt="">
                            <p>
                                <%=i.content%>
                            </p>
                            <a href="/posts/delete/?id=<%=i._id%>&path=<%=i.postpic%>">X</a>
                        </div>
                        <hr>
                        <%}%>
                </div>

            </div>
        </div>
        <div class="right-container">
            <h3>Friends</h3>
            <div class="all-friends">
                <ul class="friends-list">
                    <%for(f of friendslist){%>
                        
                    <li >
                        <a href="/users/profile/<%= f.id %>" style="display:flex;align-items: center;">
                            <img src="<%=f.avatar%>" style="width:30px;border-radius: 50%;padding:5px" alt="">
                            <%=f.name%></a>
                    </li>
                    <%}%>
                </ul>
            </div>
        </div>
        
